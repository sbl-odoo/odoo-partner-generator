<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- partner form view -->
        <record model="ir.ui.view" id="partner_form_view">
            <field name="name">partner.form</field>
            <field name="model">coopplanning.partner</field>
            <field name="arch" type="xml">
                <form string="Partner Form">
                    <header>
                        <button type="object" name="generate_name" string="Generate Worker"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="General">
                                <field name="name"/>
                                <field name="language"/>
                            </group>
                            <group>
                                <field name="avatar" widget="image" class="oe_avatar"/>
                                <!--<field name='image' widget="image" class="oe_avatar"/>-->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- partner tree/list view -->
        <record model="ir.ui.view" id="partner_tree_view">
            <field name="name">partner.tree</field>
            <field name="model">coopplanning.partner</field>
            <field name="arch" type="xml">
                <tree string="Partner Tree">
                    <field name="name"/>
                    <field name="language"/>
                </tree>
            </field>
        </record>

        <!-- partner window action -->
        <record id="partner_action" model="ir.actions.act_window">
            <field name="name">Partners</field>
            <field name="res_model">coopplanning.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
